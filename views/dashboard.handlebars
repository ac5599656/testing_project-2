<div class="row">
    <div class="col-md-3">
        <div id="user-header-container">

            
            <div id="info-tightener">
                <div id="nameDisplay">{{name}}</div>
                <div id="details-container">
                    <span id="ageDisplay">{{age}}</span>
                    <span></span>
                    <span id="locationDisplay">{{location}}</span>
                </div>
            </div>
            
        </div>
    </div>

    <div class="col-md-6">
        <div class="commentarea">

            {{!-- Text area to leave comments --}}
            <form action="/api/posts" class="create-comment-textarea">
                <div class="form-group">
                    <label for="post">Post:</label>
                    <textarea class="form-control" rows="5" id="post-comment" placeholder="Comment here"></textarea>


                    <div class="row beerbarrow">
                        <input type="favbeer" class="form-control" id="favbeerinput" placeholder="Beverage">
                        <input type="favbar" class="form-control" id="favbarinput" placeholder="Bar">
                    </div>
                    <div class="row">
                        <button type="button" class="btn btn-block btn-lg mt-3" id="commentbutton">Post</button>
                    </div>
                </div>
            </form>
        </div>

    </div>
</div>


