{{> bg-block}}
<div class="row">
    <div class="col-md-7 text-light">
    </div>
    <div class="col-md-5">
        <div class="card-overlay">
            <div id="mainsignup">
                <form name="myForm" action="/auth/signup" method="post">
                    <h3 class="signintitle">Sign Up</h3>
                    <div class="row">
                        
                        <label for="first_name">First Name:</label>
                        <input id="firstname" type="text" class="validate" name="firstname" required>
                        
                    </div>
                    <div class="row">
                        
                        <label for="last_name"> Last Name:</label>
                        <input id="lastname" type="text" class="validate" name="lastname" required>
                    </div>
                    
                    <div class="row">
                        
                        <label for="age">Age:</label>
                        <input type="text" id="age" name="age" required>
                        
                    </div>
                    <div class="row">
                        
                        <label for="email"> Email:</label>
                        <input id="email" type="email" class="validate" name="email" required>
                    </div>
                    
                    <div class="row">
                        
                        <label for="password"> Password:</label>
                        <input id="password" type="password" class="validate" name="password" required>
                    </div>
                    
                    <div class="row">
                       
                        <label for="password2"> Password:</label>
                        <input id="password2" type="password" class="validate" name="password2" required>
                    </div>
                    
                    <div class="row mt-3">
                    <label><input type="radio" name="gender" id="male" checked>Male</label>
                    <label><input type="radio" name="gender" id="female">Female</label>
                    </div>
                    <div class="row">
                        <button class="btn signup" type="submit" value="Sign In">Sign In </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>